<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>BuriedAlive</defName>
    <label>buried alive</label>
    <description>Trapped with no air to breathe, the living creature quickly succumbs to asphyxiation. That is if it isn't crushed to death first.</description>
    <hediffClass>BuriedAlive.Hediff_BuriedAlive</hediffClass>
    <defaultLabelColor>(1.0, 0.7, 1.0)</defaultLabelColor>
	<initialSeverity>0.001</initialSeverity>
    <stages>
      <li>
        <label>initial</label>
		<capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.25</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.50</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.70</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.75</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.90</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <label>lethal</label>
        <minSeverity>1.00</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-1.00</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>